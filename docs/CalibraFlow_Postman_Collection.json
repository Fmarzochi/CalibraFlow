{
  "info": {
    "name": "CalibraFlow API",
    "description": "Documentação oficial das rotas da API CalibraFlow",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          ""
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          ""
        ]
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Autenticação",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.token) {",
                  "    pm.collectionVariables.set(\"token\", jsonData.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"admin@empresa.com\",\n    \"password\": \"senha123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "auth",
                "login"
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Categorias",
      "item": [
        {
          "name": "Listar Categorias (Paginado)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/categories?page=0&size=20",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "categories"
              ],
              "query": [
                {
                  "key": "page",
                  "value": "0"
                },
                {
                  "key": "size",
                  "value": "20"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Periodicidades",
      "item": [
        {
          "name": "Listar Periodicidades (Paginado)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/periodicities?page=0&size=20",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "periodicities"
              ],
              "query": [
                {
                  "key": "page",
                  "value": "0"
                },
                {
                  "key": "size",
                  "value": "20"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Instrumentos",
      "item": [
        {
          "name": "Alterar Status",
          "request": {
            "method": "PATCH",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"status\": \"EM_CALIBRACAO\",\n    \"justification\": \"Envio para laboratório externo\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/instruments/1/status",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "instruments",
                "1",
                "status"
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Calibrações",
      "item": [
        {
          "name": "Registrar Calibração",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"instrumentId\": 1,\n    \"calibrationDate\": \"2026-02-22\",\n    \"nextCalibrationDate\": \"2027-02-22\",\n    \"certificateNumber\": \"CERT-2026-001\",\n    \"approved\": true,\n    \"observations\": \"Calibração realizada com sucesso dentro das tolerâncias\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/calibrations",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "calibrations"
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Administração (DataFixer)",
      "item": [
        {
          "name": "Processar Carga de Dados",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/datafixer/process",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "datafixer",
                "process"
              ]
            }
          },
          "response": []
        }
      ]
    }
  ]
}